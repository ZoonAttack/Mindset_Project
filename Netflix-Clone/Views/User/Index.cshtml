@using Netflix_Clone.Data
@model List<Movie>
@{
    Layout = "";
}
@{
    Layout = "_HomeLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TrackFlix - Home</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" />
    <link rel="stylesheet" href="~/css/Home.css" />
</head>
<body>
    <main class="main-content">
        <div class="trending-section">
            <section class="left-section">
                <div class="section-title">Trending Movies</div>
                <div class="card-container">
                    @foreach (var movie in Model)
                    {
                        <div class="card">
                            <img src="https://image.tmdb.org/t/p/w500@movie.PosterURL" alt="@movie.Title" />
                            <div class="card-title">@movie.Title</div>
                        </div>
                    }
                </div>

                <div class="section-title" style="margin-top: 2rem;">Trending Shows</div>
                <div class="card-container">
                    <div class="card">
                        <img src="https://via.placeholder.com/150x220" alt="Show 1" />
                        <div class="card-title">Show 1</div>
                    </div>
                    <div class="card">
                        <img src="https://via.placeholder.com/150x220" alt="Show 2" />
                        <div class="card-title">Show 2</div>
                    </div>
                </div>
            </section>

            <section class="recommended-section">
                <div class="recommended-column">
                    <div class="section-title">Top Recommended Movies</div>
                    <div class="card-container">
                        <div class="card">
                            <img src="https://via.placeholder.com/150x220" alt="Rec Movie 1" />
                            <div class="card-title">Rec Movie 1</div>
                        </div>
                    </div>
                </div>

                <div class="recommended-column">
                    <div class="section-title">Top Recommended Shows</div>
                    <div class="card-container">
                        <div class="card">
                            <img src="https://via.placeholder.com/150x220" alt="Rec Show 1" />
                            <div class="card-title">Rec Show 1</div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</body>
</html>
