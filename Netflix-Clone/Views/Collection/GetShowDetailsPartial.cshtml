@model Netflix_Clone.Data.Show

<h2>@Model.Title</h2>
<img src="@Model.PosterURL" alt="@Model.Title" />
<p>@Model.Description</p>
<p><strong>Seasons:</strong> @Model.SeasonsCount</p>
<p><strong>Language:</strong> @Model.Language</p>
<p><strong>Rating:</strong> @Model.Rating</p>
<p><strong>Release Date:</strong> @Model.ReleaseDate</p>

<div class="modal-actions">
    <button class="action-btn add-list-btn" data-id="@Model.Id">
        <i class="fas fa-plus"></i> My List
    </button>
    <button class="action-btn like-btn"><i class="fas fa-thumbs-up"></i> Like</button>
    <button class="action-btn dislike-btn"><i class="fas fa-thumbs-down"></i> Dislike</button>
</div>